> a = matrix(c(2,0,1,3),ncol=2)
> b = matrix(c(5,2,4,-1),ncol=2)
> a-b
     [,1] [,2]
[1,]   -3   -3
[2,]   -2    4
> a+b
     [,1] [,2]
[1,]    7    5
[2,]    2    2
> d <- diag(4,1,2,3)
> m <- c(3)
